<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityWydarzenie">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/buttonDolacz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@+id/textViewActivityWydarzenieOpis"
                app:layout_constraintTop_toBottomOf="@+id/textViewActivityWydarzenieOpis"
                tools:text="Button" />

            <Button
                android:id="@+id/buttonMapaFIREBASE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="Mapa"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOstatniaNagranaTrasaFIREBASE"
                tools:visibility="visible" />

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Start"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTrasa" />

            <Button
                android:id="@+id/buttonStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Stop"
                app:layout_constraintStart_toEndOf="@+id/buttonStart"
                app:layout_constraintTop_toTopOf="@+id/buttonStart" />

            <Button
                android:id="@+id/buttonWyslijTraseNaServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Wyslij trase na server"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="@+id/buttonMapa"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:visibility="visible" />

            <Button
                android:id="@+id/buttonMapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:text="Mapa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOstatniaNagranaTrasa" />

            <LinearLayout
                android:id="@+id/linearLayoutFIREBASE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/buttonMapaFIREBASE"
                app:layout_constraintStart_toEndOf="@+id/buttonMapaFIREBASE"
                app:layout_constraintTop_toTopOf="@+id/buttonMapaFIREBASE"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/textViewActivityWydarzenieDystansFIREBASE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/textViewActivityWydarzenieCzasFIREBASE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/textViewActivityWydarzeniePredkoscFIREBASE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="TextView" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/buttonMapa"
                app:layout_constraintStart_toEndOf="@+id/buttonMapa"
                app:layout_constraintTop_toTopOf="@+id/buttonMapa">

                <TextView
                    android:id="@+id/textViewActivityWydarzenieDystans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/textViewActivityWydarzenieCzas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/textViewActivityWydarzeniePredkosc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    tools:text="TextView" />


            </LinearLayout>

            <TextView
                android:id="@+id/textViewActivityWydarzenieTytul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewActivityWydarzenieMiejsceICzas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/textViewActivityWydarzenieTytul"
                app:layout_constraintTop_toBottomOf="@+id/textViewActivityWydarzenieTytul"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewActivityWydarzenieOpis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/textViewActivityWydarzenieTytul"
                app:layout_constraintTop_toBottomOf="@+id/textViewActivityWydarzenieMiejsceICzas"
                tools:text="TextView" />

            <TextView
                android:id="@+id/textViewOstatniaNagranaTrasaFIREBASE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Twoja zgłoszona trasa to:"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonDolacz"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/linearLayoutFIREBASE"
                tools:layout_editor_absoluteX="8dp" />

            <TextView
                android:id="@+id/textViewTrasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Nagraj stwoją trasę"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@+id/buttonStart"
                tools:layout_editor_absoluteX="98dp" />

            <TextView
                android:id="@+id/textViewOstatniaNagranaTrasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Twoja ostatnia nagrana trasa to:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"

    android:color="@color/colorPrimaryDarkBlue900">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/colorPrimaryDarkBlue900" />
            <corners android:radius="20dp" />
        </shape>
    </item>


    <item android:id="@android:id/background">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">


            <corners android:radius="20dp" />

            <gradient
                android:endColor="@color/colorAccentRed900"
                android:startColor="@color/colorAccentRed900"
                android:centerColor="@color/colorAccentBrightRed600"
                android:type="linear" />
            <stroke
                android:width="3dp"
                android:color="@color/colorBackgroundGray500" />


        </shape>
    </item>
</ripple>
